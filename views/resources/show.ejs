<%- include ('../partials/header') %>

<div class="container my-5" id = "test">
  <header>
    <h1 style = 'color : whitesmoke'>
      <%= resource.title %>
      <a href="/resources/<%= resource.id %>/edit">
        <i class="fa fa-edit"></i>
      </a>
    </h1>
    <br>
    <small style = 'color : whitesmoke'>
      <%= (resource.updatedAt.toLocaleString("en-CA")) %>
    </small>
    <p style = 'color : whitesmoke'><strong>By: <%= resource.user.fullname %></strong></p>
  </header>
  <hr>
  <div class="content" style = 'color : whitesmoke'>
    <%- resource.content %>
  </div>
</div>

<%- include ('../partials/footer') %>